<%= form_for(@list,url: lists_path, html:{class: 'form-horizontal'})  do |f| %>
  <table class="table table-striped table-bordered table-hover">
          <tbody>
            <tr>
               <th>教科書名</th>
            </tr>
            <%= f.nested_fields_for :name, wrapper_tag: :tr do |q| %>
                <td><%= q.text_field   :name,     class: 'form-control' %></td>
                <td><%= q.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %></td>
            <% end %>
          </tbody>
  </table>
      <%= f.add_nested_fields_link :name, 'Add new', class: 'btn btn-primary', role: 'button' %>
<% end %>

