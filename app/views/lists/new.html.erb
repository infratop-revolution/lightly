<%= form_for(@list, html:{class: 'form-horizontal'}) do |f| %>
  <table class="table table-striped table-bordered table-hover">
          <tbody>
            <tr>
               <th>教科書名</th>
            </tr>
            <%= f.nested_fields_for :texts, wrapper_tag: :tr do |q| %>
                <td><%= q.text_field   :name,     class: 'form-control' %></td>
            <% end %>
          </tbody>
  </table>
      <%= f.add_nested_fields_link :texts, 'Add new', class: 'btn btn-primary', role: 'button' %>
<% end %>
